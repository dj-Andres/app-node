<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/links/edit/{{ link.id }}" method="POST">
                        <div class="form-group">
                            <input type="text" value="{{ link.titulo }}" name="titulo" placeholder="Titulo" autofocus
                                class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="url" value="{{ link.url }}" name="url" placeholder="Url" class="form-control">
                        </div>
                        <div class="form-group">
                            <textarea name="descripcion" rows="2"
                                class="form-control">{{ link.descripcion }}"</textarea>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">Agregar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>