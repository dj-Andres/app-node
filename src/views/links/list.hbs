<div class="container pt-2">
    <div class="row">
        {{#each links }}
        <div class="col-md-3 pt-2">
            <div class="card text-center">
                <div class="card-body">
                    <a href="{{ url }}" class="" target="__blank">
                        <h3 class="card-title text-uppercase">
                            {{ titulo }}
                        </h3>
                    </a>
                    <p class="m-2">{{ descripcion }}</p>
                    <p>{{ timeago created_at}}</p>
                    <a href="/links/delete/{{id}}" class="btn btn-danger">Eliminar</a>
                    <a href="/links/edit/{{id}}" class="btn btn-warning">Modificar</a>
                </div>
            </div>
        </div>
        {{else}}
        <div class="col-md-4 mx-auto">
            <div class="card-body text-center">
                <p>No existe informaci√≥n aun !!</p>
                <a href="/links/add">Crear nuevo</a>
            </div>
        </div>
        {{/each}}
    </div>
</div>